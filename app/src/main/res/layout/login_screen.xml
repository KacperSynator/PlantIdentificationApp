<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="LoginActivity">
    <android.widget.LinearLayout
        android:id="@+id/LinearLayout_logging"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textSize="15sp"
            android:paddingTop="30dp"
            android:paddingLeft="35dp"
            android:paddingBottom="10dp"/>
        <EditText
            android:id="@+id/login_edit_email"
            android:hint="E-mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:minHeight="48dp"/>
        <TextView
            android:id="@+id/login_text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:paddingBottom="10dp"/>
        <EditText
            android:id="@+id/login_edit_password"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:minHeight="48dp"/>
        <TextView
            android:id="@+id/login_text_repeat_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat Password"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingLeft="35dp"
            android:paddingBottom="10dp"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/login_edit_repeat_password"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:minHeight="48dp"
            android:visibility="gone"/>


        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">
            <android.widget.Button
                android:id="@+id/logging_button"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:shadowColor="#454545"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:visibility="visible"/>
            <android.widget.Button
                android:id="@+id/sign_up_button"
                android:text="Sign up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:shadowColor="#454545"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:visibility="gone"/>
        </android.widget.LinearLayout>

        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">
            <android.widget.TextView
                android:id="@+id/sign_up_prompt"
                android:text="Don't have an account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:textColor="#000000"/>
            <android.widget.Button
                android:id="@+id/switch_between_login_and_sign_up"
                android:text="Sign up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_button"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:shadowColor="#454545"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:visibility="visible"/>
        </android.widget.LinearLayout>

        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/google_sign_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or use Google account"
                android:textSize="15sp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"/>
            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>
        </android.widget.LinearLayout>
    </android.widget.LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>